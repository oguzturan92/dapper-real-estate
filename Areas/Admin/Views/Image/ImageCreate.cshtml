@model CreateImageDto
@{
    ViewData["Title"] = "ImageCreate";
    Layout = "_LayoutAdmin";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Resim Ekle</h4>
            <form class="forms-sample" asp-area="Admin" asp-controller="Image" asp-action="ImageCreate" method="post">
                <input type="hidden" name="PropertyId" value="@(ViewBag.propertyId)">
                <div class="form-group">
                    <label for="ImageName">Ad</label>
                    <input type="text" class="form-control" asp-for="ImageName" id="ImageName" required>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a asp-area="Admin" asp-controller="Image" asp-action="ImageList" asp-route-propertyId="@ViewBag.propertyId" class="btn btn-light">Geri</a>
            </form>
        </div>
    </div>
</div>