@model CreateCategoryDto
@{
    ViewData["Title"] = "CategoryCreate";
    Layout = "_LayoutAdmin";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Ekle</h4>
            <form class="forms-sample" asp-area="Admin" asp-controller="Category" asp-action="CategoryCreate" method="post">
                <div class="form-group">
                    <label for="CategoryName">Ad</label>
                    <input type="text" class="form-control" asp-for="CategoryName" id="CategoryName" maxlength="50">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a asp-area="Admin" asp-controller="Category" asp-action="CategoryList" class="btn btn-light">Geri</a>
            </form>
        </div>
    </div>
</div>