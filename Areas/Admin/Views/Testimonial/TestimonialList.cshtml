@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Misafir Yorum Listesi</h4>
            <div class="table-responsive pt-3">
                @if (Model.Any())
                {
                    <table class="table table-bordered mb-3">
                        <thead>
                            <tr>
                                <th colspan="2"></th>
                                <th>Ad Soyad</th>
                                <th>Departman</th>
                                <th>Yorum</th>
                                <th colspan="2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><img src="@item.TestimonialImage" style="object-fit: cover;"></td>
                                    <td>@item.TestimonialFullname</td>
                                    <td>@item.TestimonialDepartment</td>
                                    <td>@(item.TestimonialComment.Count() > 30 ? item.TestimonialComment.Substring(0,30)+"...":item.TestimonialComment)</td>
                                    <td><a class="btn btn-inverse-warning" asp-area="Admin" asp-controller="Testimonial" asp-action="TestimonialUpdate" asp-route-id="@item.TestimonialId">Güncelle</a></td>
                                    <td><a class="btn btn-inverse-danger" asp-area="Admin" asp-controller="Testimonial" asp-action="TestimonialDelete" asp-route-id="@item.TestimonialId">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                } else
                {
                    <div class="alert alert-primary" role="alert">
                        Öge mevcut değil
                    </div>
                }
                <a class="btn btn-inverse-success" asp-area="Admin" asp-controller="Testimonial" asp-action="TestimonialCreate">Ekle</a>
            </div>
        </div>
    </div>
</div>