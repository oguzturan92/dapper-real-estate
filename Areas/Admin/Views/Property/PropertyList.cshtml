@model List<ResultPropertyDto>
@{
    ViewData["Title"] = "PropertyList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İlan Listesi</h4>
            <div class="table-responsive pt-3">
                @if (Model.Any())
                {
                    <table class="table table-bordered mb-3">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Başlık</th>
                                <th>Oluşt. Tarih</th>
                                <th>Kategori</th>
                                <th>Konum</th>
                                <th>Danışman</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><a target="_blank" style="color: #333; text-decoration: underline; margin-right: 10px;" asp-area="" asp-controller="Property" asp-action="Detail" asp-route-id="@item.PropertyId">@item.PropertyTitle</a><i class="fa-solid fa-arrow-up-right-from-square"></i>
                                    <td>@item.PropertyDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.LocationName</td>
                                    <td>@item.AgentFullname</td>
                                    <td><a class="btn btn-inverse-info" asp-area="Admin" asp-controller="Image" asp-action="ImageList" asp-route-propertyId="@item.PropertyId">Resim</a></td>
                                    <td><a class="btn btn-inverse-warning" asp-area="Admin" asp-controller="Property" asp-action="PropertyUpdate" asp-route-id="@item.PropertyId">Güncelle</a></td>
                                    <td><a class="btn btn-inverse-danger" asp-area="Admin" asp-controller="Property" asp-action="PropertyDelete" asp-route-id="@item.PropertyId">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                } else
                {
                    <div class="alert alert-primary" role="alert">
                        Öge mevcut değil
                    </div>
                }
                <a class="btn btn-inverse-success" asp-area="Admin" asp-controller="Property" asp-action="PropertyCreate">Ekle</a>
            </div>
        </div>
    </div>
</div>