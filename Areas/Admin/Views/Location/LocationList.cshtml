@model List<ResultLocationDto>
@{
    ViewData["Title"] = "LocationList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Lokasyon Listesi</h4>
            <div class="table-responsive pt-3">
                @if (Model.Any())
                {
                    <table class="table table-bordered mb-3">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Ad</th>
                                <th colspan="2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.LocationName</td>
                                    <td><a class="btn btn-inverse-warning" asp-area="Admin" asp-controller="Location" asp-action="LocationUpdate" asp-route-id="@item.LocationId">Güncelle</a></td>
                                    <td><a class="btn btn-inverse-danger" asp-area="Admin" asp-controller="Location" asp-action="LocationDelete" asp-route-id="@item.LocationId">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                } else
                {
                    <div class="alert alert-primary" role="alert">
                        Öge mevcut değil
                    </div>
                }
                <a class="btn btn-inverse-success" asp-area="Admin" asp-controller="Location" asp-action="LocationCreate">Ekle</a>
            </div>
        </div>
    </div>
</div>