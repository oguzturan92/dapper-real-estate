@model CreateLocationDto
@{
    ViewData["Title"] = "LocationCreate";
    Layout = "_LayoutAdmin";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Lokasyon Ekle</h4>
            <form class="forms-sample" asp-area="Admin" asp-controller="Location" asp-action="LocationCreate" method="post">
                <div class="form-group">
                    <label for="LocationName">Ad</label>
                    <input type="text" class="form-control" asp-for="LocationName" id="LocationName" maxlength="50">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a asp-area="Admin" asp-controller="Location" asp-action="LocationList" class="btn btn-light">Geri</a>
            </form>
        </div>
    </div>
</div>